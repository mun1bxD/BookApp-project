@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-gray-800 mb-4 text-2xl font-semibold">@ViewData["Title"]</h3>

<div class="bg-white mx-auto max-w-lg rounded-lg p-6 shadow-md">
    <p class="text-gray-700 mb-4">
        Your account contains personal data that you have given us. This page allows you to download or delete that data.
    </p>
    <p class="text-red-600 mb-6 font-semibold">
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>

    <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-4">
        <button class="text-white w-full rounded-lg bg-custom-color px-4 py-2 font-semibold focus:outline-none focus:ring-2 focus:ring-blue-500">
            Download
        </button>
    </form>

    <p>
        <a id="delete" asp-page="DeletePersonalData" class="bg-red-500 text-white inline-block w-full rounded-lg px-4 py-2 text-center font-semibold hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500">
            Delete
        </a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
