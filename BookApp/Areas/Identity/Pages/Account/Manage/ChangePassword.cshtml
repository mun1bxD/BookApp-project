@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-gray-800 mb-4 text-2xl font-semibold">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="bg-white mx-auto max-w-lg rounded-lg p-6 shadow-md">
    <form id="change-password-form" method="post" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm" role="alert"></div>

        <div class="relative">
            <input asp-for="Input.OldPassword" class="form-input text-gray-700 border-gray-300 block w-full rounded-lg border px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="current-password" aria-required="true" placeholder="Old Password" />
            <label asp-for="Input.OldPassword" class="text-gray-500 bg-white absolute -top-2 left-2 px-1 text-sm">Old Password</label>
            <span asp-validation-for="Input.OldPassword" class="text-red-500 text-sm"></span>
        </div>

        <div class="relative">
            <input asp-for="Input.NewPassword" class="form-input text-gray-700 border-gray-300 block w-full rounded-lg border px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="new-password" aria-required="true" placeholder="New Password" />
            <label asp-for="Input.NewPassword" class="text-gray-500 bg-white absolute -top-2 left-2 px-1 text-sm">New Password</label>
            <span asp-validation-for="Input.NewPassword" class="text-red-500 text-sm"></span>
        </div>

        <div class="relative">
            <input asp-for="Input.ConfirmPassword" class="form-input text-gray-700 border-gray-300 block w-full rounded-lg border px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
            <label asp-for="Input.ConfirmPassword" class="text-gray-500 bg-white absolute -top-2 left-2 px-1 text-sm">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="text-white w-full rounded-lg bg-custom-color px-4 py-2 font-semibold focus:outline-none focus:ring-2 focus:ring-blue-500">
            Update password
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
