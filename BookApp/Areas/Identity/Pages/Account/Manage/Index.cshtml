@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="mb-4 text-2xl font-semibold">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="flex justify-center">
    <div class="bg-white w-full rounded-lg p-6 shadow-md md:w-1/2">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600" role="alert"></div>

            <!-- Username (Disabled) -->
            <div class="relative mb-4">
                <input asp-for="Username" class="text-gray-500 bg-gray-100 border-gray-300 block w-full cursor-not-allowed rounded-md border px-4 py-2" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="bg-white text-gray-600 absolute -top-2 left-4 px-1 text-sm">Username</label>
            </div>

            <!-- Phone Number -->
            <div class="relative mb-4">
                <input asp-for="Input.PhoneNumber" class="text-gray-900 bg-white border-gray-300 block w-full rounded-md border px-4 py-2 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:outline-none" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="bg-white text-gray-600 absolute -top-2 left-4 px-1 text-sm">Phone Number</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-red-600 text-sm"></span>
            </div>

            <!-- Save Button -->
            <button id="update-profile-button" type="submit" class="text-white mt-4 w-full rounded-md bg-custom-color py-2 transition-colors">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
