@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="flex flex-col space-y-2">
    <li class="text-white rounded-md bg-custom-color">
        <a class="text-gray-800 text-white block px-4 py-2 @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a>
    </li>
    <li class="rounded-md bg-custom-color">
        <a class="text-gray-800 text-white block px-4 py-2 @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a>
    </li>
    <li class="rounded-md bg-custom-color">
        <a class="text-gray-800 text-white block px-4 py-2 @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a>
    </li>
    @if (hasExternalLogins)
    {
        <li class="rounded-md bg-custom-color" id="external-logins">
            <a id="external-login" class="text-gray-800 text-white block px-4 py-2 @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a>
        </li>
    }
    <li class="rounded-md bg-custom-color">
        <a class="text-gray-800 text-white block px-4 py-2 @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a>
    </li>
    <li class="rounded-md bg-custom-color">
        <a class="text-gray-800 text-white block px-4 py-2 @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a>
    </li>
</ul>
    