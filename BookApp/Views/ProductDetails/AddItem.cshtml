@model Product
<div class="mx-auto mb-16 w-3/4 space-y-2 rounded-lg shadow-[rgba(13,_38,_76,_0.19)_0px_9px_20px]">
    <div class="w-full rounded-lg">
        <h1 class="text-white rounded-lg bg-custom-color p-4 text-center text-xl font-medium">Create Product</h1>
    </div>
    <div class="">
        <form  method="post" enctype="multipart/form-data">
            <div class="shadow-gray-400 my-1 flex flex-col rounded-xl shadow-md">
                <label class="px-2 text-sm" asp-for="Title"></label>
                <input type="text" asp-for="Title" class="p-2 focus:outline-none focus:ring-custom-color" />
                <span asp-validation-for="Title" class="text-red-700"></span>
            </div>
            <div class="shadow-gray-400 my-1 flex flex-col rounded-xl shadow-md">
                <label class="px-2 text-sm" asp-for="Description"></label>
                <input type="text" asp-for="Description" class="p-2 focus:outline-none focus:ring-custom-color" />
                <span asp-validation-for="Description" class="text-red-700"></span>
            </div>
            <div class="shadow-gray-400 my-1 flex flex-col rounded-xl shadow-md">
                <label class="px-2 text-sm" asp-for="ISBN"></label>
                <input type="text" asp-for="ISBN" class="p-2 focus:outline-none focus:ring-custom-color" />
                <span asp-validation-for="ISBN" class="text-red-700"></span>
            </div>
            <div class="shadow-gray-400 my-1 flex flex-col rounded-xl shadow-md">
                <label class="px-2 text-sm"  asp-for="Author"></label>
                <input type="text" asp-for="Author" class="p-2 focus:outline-none focus:ring-custom-color" />
                <span asp-validation-for="Author" class="text-red-700"></span>
            </div>
            <div class ="shadow-gray-400 my-1 flex flex-col rounded-xl shadow-md">
                <label class="px-2 text-sm" asp-for="Price"></label>
                <input type="text" asp-for="Price" class="p-2 focus:outline-none focus:ring-custom-color" />
                <span asp-validation-for="Price" class="text-red-700"></span>
            </div>
            <div class="shadow-gray-400 my-1 flex flex-col rounded-xl pb-2 shadow-md">
                <label class="px-2 text-sm"  asp-for="Image"></label>
                <input class="px-2" asp-for="Image" type="file" accept="image/png, image/jpeg ,image/jpg" name="imageFile" />
            </div>
            <div class="shadow-gray-400 my-1 flex space-x-4 rounded-xl px-2 py-4 shadow-md">
                <button class="text-white rounded-lg bg-custom-color p-2 font-medium" type="submit">click Add item</button>
                <a class="border-2 rounded-lg p-2 font-medium hover:bg-custom-color hover:text-white" asp-controller="Product" asp-action="ContentManagement">Back to List</a>
            </div>
        </form>
    </div>
</div>